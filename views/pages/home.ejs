<% layout('/layouts/boilerplate.ejs') -%>

<!-- Hero Section -->
<section class="hero-section" id="home">
    <div class="hero-content">
        <h1 class="hero-headline">Make Your City Better..!</h1>
        <p class="hero-subheading">Report issues and track their resolution in real time</p>
        <a href="/report" class="cta-button">
            <i class="fas fa-exclamation-circle"></i>
            Report Issue
        </a>
    </div>
</section>
<!-- Information Section -->
<section class="info-section" id="how-to">
    <div class="info-container">
        <h2 class="section-title">Get Started with JanSeva</h2>
        
        <div class="info-grid">
            <!-- About Us Card -->
            <div class="about-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <h3 class="card-title">About Us</h3>
                </div>
                <div class="about-content">
                    <p>JanSeva Tracker is a smart civic engagement platform designed to bridge the gap between citizens and municipal authorities. It enables people to report everyday urban issues such as waste, road damage, water leakage, and streetlight failures while ensuring transparency and timely resolution.</p>
                </div>
            </div>
            <!-- How to Report Card -->
            <div class="report-card">
                <div class="card-header">
                    <div class="card-icon">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <h3 class="card-title">How to Report Issue</h3>
                </div>
                
                <div class="steps-container">
                    <!-- Step 1 -->
                    <div class="step-item">
                        <span class="step-number">1</span>
                         <div class="step-icon">
                            <i class="fas fa-camera"></i>
                        </div>
                        <div class="step-content">
                            <h4>Capture the Problem</h4>
                            <p>Take a photo of the issue (garbage, road, light, water).</p>
                        </div>
                    </div>

                    <!-- Step 2 -->
                    <div class="step-item">
                        <span class="step-number">2</span>
                        <div class="step-icon">
                            <i class="fas fa-edit"></i>
                        </div>
                        <div class="step-content">
                            <h4>Add Details</h4>
                            <p>Write a short description or use voice input.</p>
                        </div>
                    </div>
                    <!-- Step 3 -->
                    <div class="step-item">
                        <span class="step-number">3</span>
                        <div class="step-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="step-content">
                            <h4>Auto Location Detection</h4>
                             <p>Your location is automatically added.</p>
                        </div>
                     </div>

                    <!-- Step 4 -->
                    <div class="step-item">
                        <span class="step-number">4</span>
                        <div class="step-icon">
                            <i class="fas fa-tasks"></i>
                        </div>
                        <div class="step-content">
                            <h4>Track Status</h4>
                            <p>Get live updates: Assigned → In Progress → Completed.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>